<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.skindrila.my_smart_clock" >

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <supports-screens
        android:normalScreens="true"
        android:smallScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".AlarmReceiver" />

        <service
            android:name=".RingtonePlayingService"
            android:enabled="true" />

        <activity
            android:name=".SetTaskActivity"
            android:label="@string/title_activity_main2"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SetDataActivity"
            android:label="@string/title_activity_main22" >
        </activity>
        <activity
            android:name=".MusicPick"
            android:label="@string/title_activity_music_pick" >
        </activity>
    </application>

</manifest>