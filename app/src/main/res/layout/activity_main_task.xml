<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.skindrila.my_smart_clock.SetTaskActivity"
    android:background="#010101">

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:format24Hour="hh:mm:ss a"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#0dd41f"
        android:textSize="44sp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/turn_alarm_music_off"
        android:id="@+id/RngToneOffBtn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/questionText"
        android:layout_below="@id/textClock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#fffdfd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answerText"
        android:layout_above="@+id/RngToneOffBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:width="80dp"
        android:background="#fdfffc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txtRemaining"
        android:layout_below="@+id/RngToneOffBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#fdfdff" />


</RelativeLayout>